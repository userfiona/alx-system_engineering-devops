global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect 10s
	timeout client  30s
	timeout server  30s

frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/live/futuresystemtech.tech/fullchain.pem
    mode http
    option httplog
    acl url_root path -i /
    use_backend www-backend if url_root

backend www-backend
    mode http
    balance roundrobin
    server web-01 52.91.145.94:80 check
    server web-02 52.207.73.35:80 check	
